targetScope = 'resourceGroup'
// ------------------------------------------------------------------------------------------------
// Deployment parameters
// ------------------------------------------------------------------------------------------------
@description('Az Resources tags')
param tags object = {}

// ------------------------------------------------------------------------------------------------
// PDNSZ configuration parameters
// ------------------------------------------------------------------------------------------------
param dns_list array

// ------------------------------------------------------------------------------------------------
// Private DNS zones
// ------------------------------------------------------------------------------------------------
module pdnszDeploy 'modules/dns/dns.bicep' = [for dns_n in dns_list: {
  name: 'dns-deployment-${dns_n}'
  params: {
    dns_n: dns_n
    tags: tags
  }
}]
